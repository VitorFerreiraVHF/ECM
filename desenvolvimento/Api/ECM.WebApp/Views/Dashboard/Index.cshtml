    <main>
        <section id="section1">
            <h2>Gráfico de Barras</h2>
            <canvas id="barChart"></canvas>
        </section>

    </main>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Configuração do Gráfico de Barras
        var ctxBar = document.getElementById('barChart').getContext('2d');
        var barChart = new Chart(ctxBar, {
            type: 'bar',
            data: {
                labels: ['Item 1', 'Item 2', 'Item 3'],
                datasets: [{
                    label: 'Valores',
                    data: [50, 75, 30],
                    backgroundColor: [
                        'rgba(255, 99, 132, )',
                        'rgba(75, 192, 192, )',
                        'rgba(255, 205, 86, )',
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(255, 205, 86, 1)',
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });

    </script>




